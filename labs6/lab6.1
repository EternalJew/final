using namespace std;
int main(int argc, char** argv) {
	float x,y,yp,eps;
	int n;
	cout<<"x=";
    cin>>x;
	cout<<"\neps=";
	cin>>eps;
	cout<<"\nn=";
	cin>>n;
	y=x;
	yp=(1.0/n)*(x/pow(y,n-1)+(n-1)*y);
	while(fabs(yp-y)>eps)
	{
		y=yp;
		yp=(1.0/n)*(x/pow(y,n-1)+(n-1)*y);
	};
	cout<<"root of value is:"<<yp;
	return 0;
}